# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot Settings
BROADCAST_LEAD_TIME=300

# Broadcast Scheduler Configuration (Optional)
# Set BROADCAST_ENABLED to true to enable automatic event reminders
BROADCAST_ENABLED=false
BROADCAST_CHECK_INTERVAL=30
BROADCAST_TARGET_GROUPS=

# Storage Configuration
# For local development: use file-based storage
EVENTS_STORAGE_PATH=./events.json

# For Heroku deployment: use Redis key-value storage
# When REDIS_URL is set (automatically by Heroku Redis addon), Redis will be used
# Alternatively, set USE_REDIS=true to force Redis usage
# REDIS_URL=redis://localhost:6379/0
# USE_REDIS=false

# Logging
LOG_LEVEL=info
